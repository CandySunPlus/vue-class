{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/*.ts"
    ],
    "compileOnSave": false
}
